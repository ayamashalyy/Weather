<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/hourly_cardView"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        app:cardCornerRadius="50dp"
        android:backgroundTint="@color/light_purple">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/hourly_constrain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:elevation="20dp">

            <ImageView
                android:id="@+id/hourlyWeatherImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/cloudy"
                android:elevation="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hourly_day_txt" />

            <TextView
                android:id="@+id/hourly_day_txt"
                android:layout_width="85dp"
                android:layout_height="27dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/acme"
                android:gravity="center"
                android:text="@string/_6_am"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/hourly_temp_txt"
                android:layout_width="85dp"
                android:layout_height="27dp"


                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/acme"
                android:text="@string/_16_c"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hourlyWeatherImg" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>